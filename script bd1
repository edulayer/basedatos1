

CREATE TABLE BODEGA (
IDBODEGA VARCHAR2(5),
IDPRODUCTO VARCHAR2(5),
EXISTENCIA INTEGER,
DESCRIPCION VARCHAR2(20),
CONSTRAINT  PKBODEGA PRIMARY KEY (IDBODEGA),
CONSTRAINT  FKPRODUCTO FOREIGN KEY (IDPRODUCTO)
REFERENCES  PRODUCTO (IDPRODUCTO)
);


select * from bodega;

CREATE TABLE PRODUCTO(
IDPRODUCTO VARCHAR2(5),
NOMBRE VARCHAR2(50),
DESCRIPCION VARCHAR2(100),
PRECIO_COMPRA NUMBER(8,2),
PRECIO_VENTA NUMBER(8,2),
EXISTENCIA INTEGER,
FECHA_VENCIMIENTO DATE,
IDCATEGORIA VARCHAR2(5),
IDMARCA VARCHAR2(5),
CONSTRAINT PKPRODUCTO PRIMARY KEY (IDPRODUCTO),
CONSTRAINT FKCATEGORIA FOREIGN KEY (Idcategoria)
REFERENCES CATEGORIA (IDCATEGORIA),
CONSTRAINT FKMARCA FOREIGN KEY (IDMARCA)
REFERENCES MARCA (IDMARCA)
);

DROP TABLE PRODUCTO;
select * from producto;

CREATE TABLE CATEGORIA (
IDCATEGORIA VARCHAR2(5),
NOMBRE VARCHAR2(45),
CATEGORIA VARCHAR2(100),
CONSTRAINT PKCATEGORIA PRIMARY KEY (IDCATEGORIA)
);


select * from categoria;


CREATE TABLE MARCA (
IDMARCA VARCHAR2(5),
NOMBRE VARCHAR(45),
DESCRIPCION VARCHAR2(100),
CONSTRAINT PKMARCA PRIMARY KEY (IDMARCA)
);


select * from marca;

CREATE TABLE PROVEEDOR (
IDPROVEEDOR VARCHAR2(5),
NOMBRE_PROVE VARCHAR2(45),
MARCA_PROVE VARCHAR2(5),
TELEFONO_PROVE CHAR(18),
EMAIL_PROVE VARCHAR2(50),
IDPRODUCTO  VARCHAR2(5),
CONSTRAINT PKPROVEEDOR PRIMARY KEY (IDPROVEEDOR),
CONSTRAINT FKPRODUCTO FOREIGN KEY (IDPRODUCTO)
REFERENCES PRODUCTO (IDPRODUCTO)
);

 select * from proveedor;

CREATE TABLE FACTURA(
IDFACTURA NUMBER(14),
FECHA DATE,
IDCILIENTE VARCHAR2(14)
);


select * from factura;

CREATE TABLE DETFACTURA(
id_DETFACTURA NUMBER(14),
CANTIDA NUMBER (14),
PRECIO_UNITARIO FLOAT,
PRECIO_MAYOR FLOAT,
IVA FLOAT,
DESCUENTO FLOAT,
IDPRODUCTO,
CONSTRAINT PKDETFACTURA PRIMARY KEY (id_DETFACTURA),
CONSTRAINT FKPRODUCTO FOREIGN KEY (IDPRODUCTO)
REFERENCES PRODUCTO (IDPRODUCTO)
);




CREATE TABLE CLIENTE (
IDCLIENTE VARCHAR2(14),
NOMBRE VARCHAR2(100),
APELLIDO VARCHAR2(100),
DIRECCION VARCHAR2(100),
NIT VARCHAR2(15)
);


select * from cliente;

CREATE TABLE MOVIMIENTOS(
ID_MOVIMIENTOS VARCHAR2(5),
CANTIDAD INTEGER,
FECHA DATE,
PRECIO NUMBER (8,2),
DESCRIPCION VARCHAR2(100),
IDPRODUCTO VARCHAR2(5),
IDPROVEEDOR VARCHAR2(5),
CONSTRAINT PK_MOVIMIENTOS PRIMARY KEY (ID_MOVIMIENTOS),
CONSTRAINT FKPRODUCTO FOREIGN KEY (IDPRODUCTO)
REFERENCES PRODUCTO (IDPRODUCTO),
CONSTRAINT FKPROVEEDOR FOREIGN KEY (IDPROVEEDOR)
REFERENCES PROVEEDOR (IDPROVEEDOR));




